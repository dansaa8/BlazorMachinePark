@page "/MachineDetail/{MachineId:guid}"
    
<h3>MachineDetail</h3>

@rendermode InteractiveServer

<section class="machine-detail">
    @if (Machine == null)
    {
        <div>
            <p>Loading machine details...</p>
        </div>
    }
    else
    {
        <h1>Details for Machine:
            @Machine.Id </h1>
        <div class="col-12 row">
            @if (Machine.IsRunning)
            {
                <div>
                    <span class="badge bg-success text-wrap" style="width: 6rem;">
                        Online
                    </span>
                </div>
            }
            else
            {
                <div>
                    <span class="badge bg-danger text-wrap" style="width: 6rem;">
                        Offline
                    </span>
                </div>
            }

            <div class="mt-2">
                <button type="button" class="btn btn-outline-primary me-1"
                        @onclick="@ChangeRunningState">
                    Change running state
                </button>
            </div>

        </div>
        <div class="col-10 row">
            <div class="col-12 col-xxl-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">City</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Machine.City.Name</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Country</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Machine.City.Country.Name</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Added at</label>
                    <div class="col-sm-8">
                        <label type="text" readonlyclass="form-control-plaintext">
                            @Machine.CreatedAt.ToString("yyyy-MM-dd")
                        </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Last updated</label>
                    <div class="col-sm-8">
                        <label type="text" readonlyclass="form-control-plaintext">
                            @Machine.UpdatedAt.ToString("yyyy-MM-dd")
                        </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Type of Machine</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Machine.MachineType</label>
                    </div>
                </div>

            </div>
        </div>
    }
</section>